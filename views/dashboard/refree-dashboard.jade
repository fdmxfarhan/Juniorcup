extends layout

block content
    h1.game-title لیست بازی ها
    .game-list 
        table
            tr 
                th ردیف
                th تیم A 
                th گل A
                th تیم B
                th گل B
                th زمین
                th مشاهده
            -for(var i=0; i<games.length; i++){
                tr 
                    td= i+1
                    td= games[i].teamA.teamName
                    td= games[i].goalA
                    td= games[i].teamB.teamName
                    td= games[i].goalB
                    td= games[i].field
                    td 
                        a(href="/dashboard/game?id=#{games[i]._id}") 
                            i.fa.fa-external-link
            -}

    form.add-game(action="/dashboard/add-game" method="POST") 
        label(for="idA") تیم A: 
        select.teamSelect#teamA(name="idA") 
            -for(var i=0; i<teams.length; i++){
                option(value="#{teams[i]._id}")= teams[i].teamName
            -}
        label(for="idB") تیم B: 
        select.teamSelect#teamB(name="idB") 
            -for(var i=0; i<teams.length; i++){
                option(value="#{teams[i]._id}")= teams[i].teamName
            -}
        label(for="field") زمین: 
        select#field(name="field") 
            option(value="A") A 
            option(value="B") B 
            option(value="C") C 
            option(value="D") D 
        input.submit(type="submit" value="ثبت")