extends layout

block content
    //- h1.game-title لیست بازی ها
    .round-links
        -if(round == 1)
            a.round.active(href="/dashboard/soccer-light?round=1") راند ۱
        -else
            a.round(href="/dashboard/soccer-light?round=1") راند ۱
        -if(round == 2)
            a.round.active(href="/dashboard/soccer-light?round=2") راند ۲
        -else
            a.round(href="/dashboard/soccer-light?round=2") راند ۲
        -if(round == 3)
            a.round.active(href="/dashboard/soccer-light?round=3") راند ۳
        -else
            a.round(href="/dashboard/soccer-light?round=3") راند ۳
        -if(round == 4)
            a.round.active(href="/dashboard/soccer-light?round=4") راند ۴
        -else
            a.round(href="/dashboard/soccer-light?round=4") راند ۴
        -if(round == 5)
            a.round.active(href="/dashboard/soccer-light?round=5") راند ۵
        -else
            a.round(href="/dashboard/soccer-light?round=5") راند ۵

    .game-list 
        table
            tr 
                th ردیف
                th تیم A 
                th گل A
                th تیم B
                th گل B
                th زمین
                th مشاهده
                th حذف
            -for(var i=0; i<games.length; i++){
                tr 
                    td= i+1
                    td= games[i].teamA.teamName
                    td= games[i].goalA
                    td= games[i].teamB.teamName
                    td= games[i].goalB
                    td= games[i].field
                    td 
                        a(href="/dashboard/game?id=#{games[i]._id}") 
                            i.fa.fa-external-link
                    td 
                        a(href="/dashboard/light-delete-game?id=#{games[i]._id}") 
                            i.fa.fa-trash
                    
            -}

    form.add-game(action="/dashboard/add-game-light" method="POST") 
        label(for="idA") تیم A: 
        select.teamSelect#teamA(name="idA") 
            -for(var i=0; i<teams.length; i++){
                option(value="#{teams[i]._id}")= teams[i].teamName
            -}
        label(for="idB") تیم B: 
        select.teamSelect#teamB(name="idB") 
            -for(var i=0; i<teams.length; i++){
                option(value="#{teams[i]._id}")= teams[i].teamName
            -}
        label(for="field") زمین: 
        select#field(name="field") 
            option(value="A") A 
            option(value="B") B 
            option(value="C") C 
            //- option(value="D") D 
        label(for="round") راند: 
        input.num(type="number" name="round" value='1')
        input.submit(type="submit" value="ثبت")
        a.link(href="/dashboard/soccer-light-score") جدول امتیازات
    a.link.return(href="/dashboard") بازگشت
    a.goto-game(href="/game/soccer-light") 
        i.fa.fa-arrow-right
        | مشاهده بازی